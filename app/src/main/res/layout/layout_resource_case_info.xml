<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/white">

    <!--资源分布 案件信息-->
    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_blue1"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="#5099FD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件信息"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view_blue1"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/view_blue1"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_case_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_title">

        <TextView
            android:id="@+id/tv_organization_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="案件名称："
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_organization_title"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/tv_organization"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_case_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_case_name">

        <TextView
            android:id="@+id/tv_report_case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报案地址："
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_report_case_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_report_case_title"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_report_case_address"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_case_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_case_address">

        <TextView
            android:id="@+id/tv_case_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报案时间："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_case_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_case_time_title"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_case_time"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_case_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_case_time"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_7">

        <TextView
            android:id="@+id/tv_case_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件描述："
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_case_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_case_desc_title"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_case_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_case_desc"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_case_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件状态："
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_case_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:gravity="center"
            app:bl_corners_radius="3dp"
            app:bl_solid_color="@color/color_436BFF"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_case_status_title"
            />

        <RelativeLayout
            android:id="@+id/rl_go_here"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@drawable/shape_blue_circle">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_navigation"
                />

        </RelativeLayout>

    </RelativeLayout>

</com.noober.background.view.BLRelativeLayout>