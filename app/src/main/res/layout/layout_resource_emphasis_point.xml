<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/white">

    <!--资源分布 重点点位-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8">

            <View
                android:id="@+id/view_blue1"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="#5099FD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重点点位"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/view_blue1"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E9EEFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点位名称："
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_point_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_title_name"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#343434"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E9EEFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7">

            <TextView
                android:id="@+id/tv_position_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_point_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_position_title"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#343434"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_alignBottom="@+id/rl_go_here_point">

                <TextView
                    android:id="@+id/tv_place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置："
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@+id/tv_place"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/tv_place_title"
                    android:text=""
                    android:textColor="#343434"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_go_here_point"
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_7"
                android:background="@drawable/shape_blue_circle">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_navigation"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</com.noober.background.view.BLRelativeLayout>