<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/white">

    <!--资源分布 人员信息-->
    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_blue1"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="#5099FD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员信息"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view_blue1"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/view_blue1"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_title">

        <TextView
            android:id="@+id/tv_person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_person_title"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_person_title"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_name">

        <TextView
            android:id="@+id/tv_belong_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属单位："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_belong_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_belong_title"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_belong_title"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_unit">

        <TextView
            android:id="@+id/tv_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_contact_title"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/iv_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dial"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/tv_contact_title"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_contact">

        <TextView
            android:id="@+id/tv_organization_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机构电话："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_organization_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_organization_phone_title"
            android:text=""
            android:textColor="#343434"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/iv_call_organization_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dial"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_organization_phone"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_phone"
        android:layout_marginBottom="19dp">

        <TextView
            android:id="@+id/tv_person_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员状态："
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_person_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_person_status_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_person_status_title"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_E9EEFF"/>

    </RelativeLayout>

</com.noober.background.view.BLRelativeLayout>