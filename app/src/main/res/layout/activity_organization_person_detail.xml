<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:src="@mipmap/default_head"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <RelativeLayout
            android:id="@+id/rl_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_header"
            android:layout_toRightOf="@+id/iv_header">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/iv_person_header"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_person_bottom"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/iv_header"
            android:layout_below="@+id/rl_person"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dept_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="部门"
            android:textColor="@color/color_DE000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:minHeight="48dp"
            android:text=""
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="17dp"
        android:background="@color/color_fafafa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="联系电话"
            android:textColor="@color/color_DE000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:minHeight="48dp"
            android:text=""
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="17dp"
        android:background="@color/color_fafafa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="办公电话"
            android:textColor="@color/color_DE000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_office_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:minHeight="48dp"
            android:text=""
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </RelativeLayout>

    <com.noober.background.view.BLTextView
        android:id="@+id/rl_call_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:gravity="center"
        android:layout_margin="@dimen/dp_16"
        android:text="拨号"
        app:bl_solid_color="@color/drop_down_selected"
        app:bl_corners_radius="3dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible"
        />

    <com.noober.background.view.BLTextView
        android:id="@+id/rl_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="发消息"
        app:bl_solid_color="@color/drop_down_selected"
        app:bl_corners_radius="3dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <com.noober.background.view.BLTextView
        android:id="@+id/rl_speech_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:text="语音通话"
        app:bl_solid_color="@color/white"
        app:bl_corners_radius="3dp"
        app:bl_stroke_width="1.5dp"
        app:bl_stroke_color="@color/color_dddddd"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"
        />

</LinearLayout>