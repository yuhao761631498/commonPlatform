<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_66000000"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="@dimen/dp_282"
        android:layout_height="@dimen/dp_248"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@color/white">

        <TextView
            android:id="@+id/deal_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="处置结果"
            android:textColor="@color/color_DE000000"
            android:textSize="@dimen/sp_21" />

        <EditText
            android:id="@+id/case_comments_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_below="@+id/deal_textview"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/color_fafafa"
            android:gravity="left|top"
            android:hint="请输入处置结果(字数140)"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/color_fafafa"
                android:minHeight="@dimen/dp_36"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_fafafa"
                android:gravity="center"
                android:minHeight="@dimen/dp_36"
                android:text="确定"
                android:textColor="@color/color_436BFF"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>