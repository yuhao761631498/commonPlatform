<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_13"
    android:paddingRight="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_12"
    app:bl_corners_radius="3dp"
    app:bl_solid_color="@color/white">

    <ImageView
        android:id="@+id/left_imageview"
        android:layout_width="@dimen/dp_85"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_alarm_center_red_def" />

    <View
        android:id="@+id/view_blue1"
        android:layout_width="@dimen/dp_4"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:background="@color/color_5099FD"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_patrolType"
        app:layout_constraintStart_toEndOf="@+id/left_imageview"
        app:layout_constraintTop_toTopOf="@+id/tv_patrolType" />

    <TextView
        android:id="@+id/tv_patrolType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_blue1"
        app:layout_constraintTop_toTopOf="@+id/left_imageview"
        tools:text="[日常巡逻]" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_patrol_locus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minHeight="20dp"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:text="巡逻轨迹"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:bl_corners_radius="2dp"
        app:bl_solid_color="@color/color_436BFF"
        app:layout_constraintBottom_toTopOf="@+id/tv_patrol_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_patrol_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:minHeight="20dp"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:text="巡逻记录"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:bl_corners_radius="2dp"
        app:bl_solid_color="@color/color_436BFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_patrol_locus"
        app:layout_constraintTop_toBottomOf="@+id/tv_patrol_locus" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/icon_alarm_time"
        android:drawablePadding="5dp"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_patrol_locus"
        app:layout_constraintStart_toStartOf="@+id/view_blue1"
        app:layout_constraintTop_toBottomOf="@+id/tv_patrolType"
        tools:text="" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/icon_alarm_time"
        android:drawablePadding="5dp"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_time"
        app:layout_constraintStart_toStartOf="@+id/tv_start_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_time"
        tools:text="" />

    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/icon_patrol_person"
        android:drawablePadding="5dp"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_end_time"
        app:layout_constraintStart_toStartOf="@+id/tv_end_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_end_time"
        tools:text="" />

    <TextView
        android:id="@+id/tv_one_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_alarm_level_red"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        tools:text="一人多杆"
        android:textColor="#f24343"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/left_imageview"
        app:layout_constraintStart_toStartOf="@+id/tv_person_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_name" />

    <TextView
        android:id="@+id/tv_more_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/tv_one_person"
        android:background="@drawable/shape_alarm_level_red"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:text="网鱼行为"
        android:textColor="#f24343"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/tv_one_person"
        app:layout_constraintTop_toTopOf="@+id/tv_one_person" />

    <TextView
        android:id="@+id/tv_oval_1"
        android:layout_width="@dimen/dp_22"
        android:layout_height="6dp"
        android:layout_marginStart="12dp"
        android:background="@mipmap/ic_patrol_record_more"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_more_fish"
        app:layout_constraintStart_toEndOf="@+id/tv_more_fish"
        app:layout_constraintTop_toTopOf="@+id/tv_more_fish"
        app:layout_constraintVertical_bias="0.444" />

</com.noober.background.view.BLConstraintLayout>