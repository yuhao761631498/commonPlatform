<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_alarm_color_bg"
    android:minWidth="@dimen/dp_144"
    android:minHeight="@dimen/dp_80">


    <ImageView
        android:id="@+id/iv_find_ship"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/icon_find_ship"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_find_ship_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="158"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_find_ship" />

    <TextView
        android:id="@+id/tv_illegal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="船舶出现"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@+id/tv_find_ship_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_find_ship_number" />
</androidx.constraintlayout.widget.ConstraintLayout>