<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FAFAFA">


    <TextView
        android:id="@+id/tv_switch_video_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableLeft="@mipmap/icon_switch_video_type"
        android:drawablePadding="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="可见光/红外光"
        android:textColor="@color/color_8A000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_refresh_video_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableLeft="@mipmap/icon_refresh_cover_video"
        android:drawablePadding="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="刷新封面"
        android:textColor="@color/color_8A000000"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="@+id/tv_switch_video_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch_video_type" />

    <TextView
        android:id="@+id/tv_video_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:drawableLeft="@mipmap/icon_set_video"
        android:drawablePadding="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="设置"
        android:layout_marginLeft="@dimen/dp_16"
        android:textColor="@color/color_8A000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_switch_video_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_refresh_video_cover" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_set"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@color/color_66000000"/>


    <TextView
        android:id="@+id/tv_video_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableLeft="@mipmap/icon_video_cancel"
        android:drawablePadding="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="取消"
        android:layout_marginLeft="@dimen/dp_16"
        android:textColor="@color/color_8A000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_switch_video_type"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>