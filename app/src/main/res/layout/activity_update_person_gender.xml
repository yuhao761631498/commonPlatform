<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_update_man"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="男"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="17sp"
            app:bl_selected_solid_color="@color/white"
            app:bl_selected_textColor="@color/color_5099FD"
            app:bl_unSelected_solid_color="@color/white"
            app:bl_unSelected_textColor="@color/color_666666"
            />

    </RelativeLayout>

    <com.noober.background.view.BLView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:bl_selected_solid_color="@color/color_5099FD"
        app:bl_unSelected_solid_color="@color/color_fafafa"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_update_woman"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="女"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="17sp"
            app:bl_selected_solid_color="@color/white"
            app:bl_selected_textColor="@color/color_5099FD"
            app:bl_unSelected_solid_color="@color/white"
            app:bl_unSelected_textColor="@color/color_666666"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:bl_selected_solid_color="@color/color_5099FD"
        app:bl_unSelected_solid_color="@color/color_fafafa"/>

</LinearLayout>